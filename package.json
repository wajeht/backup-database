{
	"name": "capdb",
	"version": "0.0.1",
	"description": "backup database periodically",
	"main": "./dist/src/cli.js",
	"bin": {
		"capdb": "./dist/src/cli.js"
	},
	"scripts": {
		"cli": "npm unlink capdb && rm -rf ./dist && npm run build && chmod +x ./dist/src/cli.js && npm link",
		"dev": "npm run cli && tsc -w",
		"build": "tsc",
		"format:check": "prettier --check .",
		"format": "prettier --write .",
		"lint:check": "eslint .",
		"lint": "eslint --fix ."
	},
	"keywords": [
		"postgres",
		"mysql"
	],
	"author": "wajeht",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^20.6.0",
		"@types/node-cron": "^3.0.8",
		"@typescript-eslint/eslint-plugin": "^6.6.0",
		"@typescript-eslint/parser": "^6.6.0",
		"eslint": "^8.49.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.0",
		"prettier": "^3.0.3"
	},
	"engines": {
		"node": ">=18"
	},
	"dependencies": {
		"@inquirer/prompts": "^3.0.4",
		"commander": "^11.0.0",
		"node-cron": "^3.0.2",
		"typescript": "^5.2.2"
	}
}
